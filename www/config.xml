<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.sensation" version="1.15.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>radioogle</name>

    <description>
    </description>
	
	<plugin name="com.phonegap.plugins.barcodescanner" source="pgb" spec="2.2.0" />
    <plugin name="com.pushwoosh.plugins.pushwoosh" source="pgb" spec="3.4.2" />
    <plugin name="cordova-plugin-admobpro" spec="2.15.0" />
    <plugin name="cordova-plugin-whitelist" spec="1.2.1" />
    <plugin name="cordova-plugin-x-toast" spec="2.5.0" />
    <plugin name="de.appplant.cordova.plugin.email-composer" source="pgb" spec="0.8.2" />
    <plugin name="nl.x-services.plugins.socialsharing" source="pgb" spec="4.3.8" />
    <plugin name="org.apache.cordova.device" source="pgb" spec="0.3.0" />
    <plugin name="org.apache.cordova.dialogs" source="pgb" spec="0.3.0" />
    <plugin name="org.apache.cordova.geolocation" source="pgb" spec="0.3.12" />
    <plugin name="org.apache.cordova.inappbrowser" source="pgb" spec="0.6.0" />
    <plugin name="org.apache.cordova.splashscreen" source="pgb" spec="1.0.0" />


    <!-- <plugin name="com.sarriaroman.PhotoViewer" /> -->
    <!--<plugin name="org.apache.cordova.dialogs.Notification" />-->

    
    <content src="index.html" />
    <access origin="*" />
    
    <gap:platform name="android">
        <allow-intent href="market:*" />
        <access origin="*" />
    </gap:platform>
    
	<gap:platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <access origin="*" />
    </gap:platform>
    
    <preference name="android-build-tool" value="gradle" /> 
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="3000"/>
    
	<gap:splash src="img/android/drawable-ldpi/splash.png" gap:platform="android" gap:qualifier="land-ldpi" />
    <gap:splash src="img/android/drawable-hdpi/splash.png" gap:platform="android" gap:qualifier="land-hdpi" />
    <gap:splash src="img/android/drawable-xhdpi/splash.png" gap:platform="android" gap:qualifier="land-xhdpi" />
    <gap:splash src="img/android/drawable-mdpi/splash.png" gap:platform="android" gap:qualifier="land-mdpi" />

	<!--
    <gap:splash src="res/screen/android/screen-ldpi-portrait.png" gap:platform="android" gap:qualifier="port-ldpi" />
	<gap:splash src="res/screen/android/screen-mdpi-portrait.png" gap:platform="android" gap:qualifier="port-mdpi" />
	<gap:splash src="res/screen/android/screen-hdpi-portrait.png" gap:platform="android" gap:qualifier="port-hdpi" />
	<gap:splash src="res/screen/android/screen-xhdpi-portrait.png" gap:platform="android" gap:qualifier="port-xhdpi" />
    -->
    
    <gap:platform name="ios">
        <splash src="res/screen/ios/screen-iphone-portrait.png" width="320" height="480"/>
        <splash src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" height="960"/>
        <splash src="res/screen/ios/screen-ipad-portrait.png" width="768" height="1004"/>>
        <splash src="res/screen/ios/screen-ipad-landscape.png" width="1024" height="768"/>
        <splash src="res/screen/ios/screen-ipad-landscape-2x.png" width="1280" height="750"/>
        <splash src="res/screen/ios/screen-ipad-portrait-2x.png" width="1280" height="1920"/>
        <splash src="res/screen/ios/screen-iphone-landscape-2x.png" width="1024" height="748"/>
        <splash src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136"/>
    </gap:platform>
    
    <icon src="icon.png"/>
	<icon src="res/icon/android/icon-36-ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
	<icon src="res/icon/android/icon-48-mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
	<icon src="res/icon/android/icon-72-hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
	<icon src="res/icon/android/icon-96-xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
    
    <gap:platform name="ios">
        <icon src="res/icon/ios/icon-57.png" width="58" height="58" />
        <icon src="res/icon/ios/icon-57-2x.png" width="120" height="120" />
        <icon src="res/icon/ios/icon-72.png" width="72" height="72" />
        <icon src="res/icon/ios/icon-72-2x.png" width="152" height="152" />
    </gap:platform>    
        
    
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" /> 
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashScreen" value="splash" />

    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
    
    <feature name="Vibration">
        <param name="android-package" value="org.apache.cordova.vibration.Vibration" />
    </feature>
    
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.Notification" />
    </feature>
    
</widget>
